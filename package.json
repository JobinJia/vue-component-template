{
  "name": "tsdown-lib-template",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "packageManager": "pnpm@10.12.4",
  "scripts": {
    "lint": "npx oxlint && npx eslint",
    "lint:fix": "npx oxlint --fix && npx eslint --fix",
    "build": "pnpm -r run build",
    "dev": "pnpm --filter playground dev",
    "playground:dev": "pnpm --filter playground dev",
    "playground:build": "pnpm --filter playground build",
    "ui:build": "pnpm --filter ui build",
    "ui:dev": "pnpm --filter ui dev",
    "prepare": "husky",
    "test": "vitest",
    "test:ui": "vitest --ui"
  },
  "peerDependencies": {
    "vue": "^3.5.17"
  },
  "devDependencies": {
    "@jobinjia/eslint-config": "^0.0.5",
    "@types/node": "^22.16.0",
    "@unocss/cli": "^66.3.3",
    "@unocss/reset": "^66.3.3",
    "@unocss/vite": "^66.3.3",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vitejs/plugin-vue-jsx": "^5.0.1",
    "@vue/test-utils": "^2.4.6",
    "ansis": "^4.1.0",
    "bumpp": "^10.2.0",
    "eslint": "^9.30.1",
    "eslint-plugin-oxlint": "^1.6.0",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "oxlint": "^1.6.0",
    "rolldown": "1.0.0-beta.24",
    "tinyglobby": "^0.2.14",
    "tsdown": "^0.12.9",
    "typescript": "^5.8.3",
    "unocss": "^66.3.3",
    "unplugin-vue": "^6.2.0",
    "vite": "npm:rolldown-vite@latest",
    "vitest": "^3.2.4",
    "vue": "^3.5.17",
    "vue-tsc": "^3.0.1"
  },
  "lint-staged": {
    "*.{js,ts,vue,tsx,json,md}": [
      "oxlint --fix",
      "eslint --fix"
    ]
  }
}
